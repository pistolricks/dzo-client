{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "types": [
      "vinxi/types/client",
      "vite-plugin-solid-svg/types-component-solid"
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
